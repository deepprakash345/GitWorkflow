{
  "data": {},
  "items": {
    "personal" : {
      "viewType": "panel",
      "name": "personal",
      "title": "Personal Information",
      "items": {
        "firstname": {
          "name": "firstname",
          "viewType": "text-input",
          "title": "Firstname",
          "constraints": {
            "type": "string",
            "required": true
          },
          "constraintMessages": {
            "required": "The field is required"
          }
        },
        "lastname": {
          "name": "lastname",
          "viewType": "text-input",
          "title": "Lastname",
          "constraints": {
            "type": "string",
            "required": true
          },
          "constraintMessages": {
            "required": "The field is required"
          }
        },
        "selectone": {
          "name": "selectone",
          "viewType": "radio-button",
          "title": "Select One",
          "constraints" : {
            "type": "boolean",
            "options": [{
              "text" : "Option 1(choose me)",
              "value" : true
            },{
              "text" : "Option 2",
              "value" : false
            }],
            "required": true
          },
          "constraintMessages": {
            "required": "The field is required"
          }
        },
        "aboutme": {
          "name": "aboutme",
          "viewType": "text-input",
          "multiline" : true,
          "title": "About me",
          "default": "Everything is awesome!",
          "constraints": {
            "type": "string",
            "required": true
          },
          "constraintMessages": {
            "required": "The field is required"
          }
        },
        "reset": {
          "name": "reset",
          "viewType": "button",
          "title": "Reset",
          "screenReaderText": "Enter your message in less than 1000 characters and minimum 50 characters",
          "events": {
            "click": "dispatch_event($form, 'submit')"
          }
        },
        "submit": {
          "name": "submit",
          "viewType": "button",
          "title": "Submit",
          "screenReaderText": "Enter your message in less than 1000 characters and minimum 50 characters",
          "events": {
            "click": "dispatch_event($form, 'submit')"
          }
        }
      }
    }
  },
  "events": {
    "submit" : "submit_form('submitSuccess', 'submitError')",
    "submitSuccess": "show_message_box($form.thankyouMessage)"
  },
  "thankyouMessage": "Thank you for submitting the form",
  "metadata":{
    "grammar" : "jsonformula-af",
    "locale" : "en-us"
  }
}
