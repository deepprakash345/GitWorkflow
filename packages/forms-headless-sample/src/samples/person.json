{
  "$schema" : "https://git.corp.adobe.com/raw/livecycle/af2-docs/gh-pages/schema/adaptive-form.schema.json",
  "items": {
    "firstName": {
      "name": "firstName",
      "title": "first name",
      "description": "The person's first name.",
      "constraints": {
        "type": "string",
        "required": true
      },
      "viewType": "text-input"
    },
    "middleName": {
      "name": "middleName",
      "title": "middle name",
      "description": "The person's middle name.",
      "constraints": {
        "type": "string",
        "required": true
      },
      "viewType": "text-input"
    },
    "lastName": {
      "name": "lastName",
      "title": "last name",
      "description": "The person's last name.",
      "constraints": {
        "type": "string",
        "required": true
      },
      "viewType": "text-input"
    },
    "fullName": {
      "name": "fullName",
      "title": "full name",
      "description": "The person's full name.",
      "constraints": {
        "type": "string",
        "required": true
      },
      "viewType": "text-input"
    },
    "gender": {
      "name": "gender",
      "title": "Gender",
      "constraints": {
        "type": "string",
        "options": [{
          "text" : "Male",
          "value" : "male"
        },
        {
          "text" : "Female",
          "value" : "female"
        }]
      },
      "viewType": "radio-button"
    }
  }
}