{
  "data": {},
  "items": {
    "panel" : {
      "viewType": "fd/af/components/wizard",
      "name": "panel",
      "title": "Custom Wizard",
      "items": {
        "step1": {
          "viewType": "fd/af/components/wizardstep",
          "name": "step1",
          "title": "Step1",
          "items": {
            "employerFName": {
              "name": "employerFName",
              "viewType": "text-input",
              "title": "Employer's First Name",
              "default": "",
              "constraints": {
                "type": "string",
                "required": true
              },
              "constraintMessages": {
                "required": "The field is required"
              }
            },
            "employerLName": {
              "name": "employerLName",
              "viewType": "text-input",
              "title": "Employer's Last Name",
              "default": "",
              "constraints": {
                "type": "string",
                "required": true
              },
              "constraintMessages": {
                "required": "The field is required"
              }
            },
            "employerFullName": {
              "name": "employerFullName",
              "viewType": "text-input",
              "title": "Employer's Full Name",
              "constraints": {
                "type": "string",
                "required": true
              },
              "rules": {
                "value": "$form.panel.step1.employerFName.value + ' ' + $form.panel.step1.employerLName.value"
              },
              "constraintMessages": {
                "required": "The field is required"
              }
            },
            "employer_address": {
              "name": "employer_address",
              "viewType": "text-input",
              "title": "Employer's Address",
              "multiline": true,
              "rules": {
                "required": "$form.employment_status.value == true"
              },
              "constraints": {
                "type": "string",
                "required": true
              },
              "constraintMessages": {
                "required": "The field is required"
              }
            }
          }
        },
        "step2": {
          "viewType": "fd/af/components/wizardstep",
          "name": "step2",
          "title": "Step2",
          "items": {
            "employment_position": {
              "name": "employment_position",
              "viewType": "text-input",
              "title": "Employment Title",
              "rules": {
                "required": "$form.employment_status.value == true"
              },
              "constraints": {
                "type": "string",
                "required": true
              },
              "constraintMessages": {
                "required": "The field is required"
              }
            },
            "employment_start_date": {
              "name": "employment_start_date",
              "viewType": "date-input",
              "title": "Employment Start Date",
              "constraints": {
                "type": "string",
                "format": "date",
                "required": true
              },
              "constraintMessages": {
                "required": "The field is required"
              }
            }
          }
        }
      }
    },
    "formSubmit": {
      "name": "formSubmit",
      "viewType": "button",
      "title": "Submit",
      "screenReaderText": "Enter your message in less than 1000 characters and minimum 50 characters",
      "events": {
        "click": "dispatch_event($form, 'submit')"
      }
    }
  },
  "events": {
    "submit" : "submit_form('submitSuccess', 'submitError')",
    "submitSuccess": "show_message_box($form.thankyouMessage)"
  },
  "thankyouMessage": "Thank you for submitting the form",
  "metadata":{
      "grammar" : "jsonformula-af",
      "locale" : "en-us"
  }
}
