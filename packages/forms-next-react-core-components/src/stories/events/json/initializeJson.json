{
    "items": {
        "dropDownDynamic": {
            "name": "dropDownDynamic",
            "title": "Fetch options from api",
            "type": "string",
            "viewType": "drop-down",
            "required": true,
            "events": {
                "initialize": "request('https://countriesnow.space/api/v0.1/countries', 'GET', null, 'stateSuccess', 'stateError')",
                "custom:stateSuccess": "{ enum : $event.payload.data[*].country, enumNames: $event.payload.data[*].country }"
            },
            "constraintMessages": {
                "required": "The field is required"
            }
        }
    }
}